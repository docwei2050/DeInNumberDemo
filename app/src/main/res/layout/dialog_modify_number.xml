<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="match_parent">
   <TextView
       android:layout_width="match_parent"
       android:text="修改购买数量"
       android:textSize="16sp"
       android:textColor="#000000"
       android:layout_marginLeft="10dp"
       android:layout_height="wrap_content"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:layout_height="35dp">
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/number_de_iv"
            android:scaleType="centerInside"
            android:src="@drawable/selector_decrease"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_rect_grey"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:text="1000000000000000000"
            android:inputType="number"
            android:padding="5dp"
            android:id="@+id/number_et"
            android:maxLines="1"
            android:background="@drawable/shape_rect_grey"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/common_increase"
            android:id="@+id/number_in_iv"
            android:background="@drawable/shape_rect_grey"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="取消"
            android:id="@+id/btn_cancel"
            android:layout_marginRight="2dp"
            android:textColor="@color/common_color_white"
            android:background="@drawable/selector_btn_grey"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确定"
            android:id="@+id/btn_sure"
            android:layout_marginLeft="2dp"
            android:textColor="@color/common_color_white"
            android:background="@drawable/selector_btn_red"
            android:gravity="center"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>